{{!-- <!-- Vertical Navbar --> --}}
{{> vertical_nav}}
{{!-- <!-- Top Navbar --> --}}
{{> top_nav}}

{{! <!-- Main Content --> }}
<div class="content pt-5">
  {{! <!-- Posts Component --> }}
  <div class="mx-n6 bg-white px-6 pt-7 border-y border-300">
    <div class="row">
      {{!-- prettier-ignore --}}
      <div
        data-list='{"valueNames":["title","user","comments","post","time"],"page":6}'
      >
        {{! Posts Header }}
        <div class="row align-items-end justify-content-between pb-5 g-3">
          <div class="col-auto">
            <h3>
              Dust Pile
            </h3>
            <p class="text-700 lh-sm mb-0">
              Explore user entries across the entire Blockdust ecosystem
            </p>
          </div>
          <!-- Search form -->
          <div class="col-12 col-md-auto">
            <div class="row g-2">
              <div class="col-auto flex-1">
                <div class="search-box">
                  <form
                    class="position-relative"
                    data-bs-toggle="search"
                    data-bs-display="static"
                  >
                    <input
                      class="form-control form-control-sm search-input search"
                      type="search"
                      placeholder="Search"
                      aria-label="Search"
                    />
                    <span class="fas fa-search search-box-icon"></span>
                  </form>
                </div>
              </div>
              <div class="col-auto">
                <button
                  class="btn btn-sm btn-phoenix-secondary bg-white hover-bg-100"
                  type="button"
                >
                  All posts
                </button>
              </div>
            </div>
          </div>
        </div>
        {{! Posts Table }}
        <div class="table-responsive mx-n1 px-1 scrollbar">
          <table class="table table-hover fs--2 mb-0 overflow-hidden">
            <caption>List of posts by all users</caption>
            <thead>
              <tr>
                <th
                  class="sort border-top white-space-nowrap align-middle"
                  scope="col"
                  style="min-width:360px;"
                  data-sort="title"
                >
                  TITLE
                </th>
                <th
                  class="sort border-top align-middle"
                  scope="col"
                  data-sort="user"
                  style="min-width:200px;"
                >
                  USER
                </th>
                <th
                  class="sort border-top align-middle"
                  scope="col"
                  data-sort="comments"
                  style="min-width:110px;"
                >
                  COMMENTS
                </th>
                <th
                  class="sort border-top text-end align-middle"
                  scope="col"
                  data-sort="time"
                >
                  TIME
                </th>
              </tr>
            </thead>
            <tbody class="list" id="table-latest-post-body">
              {{#each posts as |post|}}
                <tr onclick="window.location='/post/{{id}}'" class="hover-actions-trigger btn-reveal-trigger position-static" style="cursor: pointer;">
                  {{> post-info post}}
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{! Pagination }}
        <div class="row align-items-center py-2">
          <div class="pagination d-none"></div>
          <div class="col d-flex fs--1">
            <p
              class="mb-0 d-none d-sm-block me-3 fw-semi-bold text-900"
              data-list-info
            ></p>
            <a class="fw-semi-bold" href="#!" data-list-view="*">
              View all
              <span
                class="fas fa-angle-right ms-1"
                data-fa-transform="down-1"
              ></span>
            </a>
            <a class="fw-semi-bold d-none" href="#!" data-list-view="less">
              View Less
            </a>
          </div>
          <div class="col-auto d-flex">
            <button
              class="btn btn-link px-1 me-1"
              type="button"
              title="Previous"
              data-list-pagination="prev"
            >
              <span class="fas fa-chevron-left me-2"></span>
              Previous
            </button>
            <button
              class="btn btn-link px-1 ms-1"
              type="button"
              title="Next"
              data-list-pagination="next"
            >
              Next
              <span class="fas fa-chevron-right ms-2"></span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

    <footer class="footer">
        {{> footer}}
    </footer>
</div>
