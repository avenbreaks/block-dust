{{! <!-- Main Content --> }}
<div class="content pt-5">
  {{! <!-- Page Header --> }}
  <div class="pb-5">
    <div class="row g-5">
      <div class="col-12 col-xxl-6">
        <h2 class="mb-2">
          Blockdust Dashboard
        </h2>
        <h5 class="text-700 fw-semi-bold">
          Welcome to your personal Blockdust post manager
        </h5>
      </div>
      <hr class="bg-200 my-4">
      <div class="col-12 col-md-6">
        <div class="card border border-200 shadow-none h-100">
          <div class="card-body">
            <form class="post-form">
                <h4 class="mb-3">Create a New Post</h4>
              <label class="form-label" for="basic-form-input">Title</label>
              <div class="mb-3">
                <input name="title" class="form-control border-300" id="basic-form-input" placeholder="Grab their attention"></textarea>
              </div>
              <label class="form-label" for="basic-form-textarea">Post</label>
              <div class="mb-3">
                <textarea name="post_text" class="form-control border-300" id="basic-form-textarea" rows="10" placeholder="Tell the world..."></textarea>
              </div>
              <button class="btn btn-phoenix-secondary btn-sm mb-3 border border-300" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{! <!-- End Page Header --> }}
  {{! <!-- Posts Component --> }}
  <div class="mx-n6 bg-white px-6 pt-7 border-y border-300">
    <div class="row">
      {{!-- prettier-ignore --}}
      <div
        data-list='{"valueNames":["title","comments","post","time"],"page":6}'
      >
        {{! Posts Header }}
        <div class="row align-items-end justify-content-between pb-5 g-3">
          <div class="col-auto">
            <h3>
              Your Posts
            </h3>
            <p class="text-700 lh-sm mb-0">
              View your all-time blog posts by various categories
            </p>
          </div>
          <!-- Search form -->
          <div class="col-12 col-md-auto">
            <div class="row g-2">
              <div class="col-auto flex-1">
                <div class="search-box">
                  <form
                    class="position-relative"
                    data-bs-toggle="search"
                    data-bs-display="static"
                  >
                    <input
                      class="form-control form-control-sm search-input search"
                      type="search"
                      placeholder="Search"
                      aria-label="Search"
                    />
                    <span class="fas fa-search search-box-icon"></span>
                  </form>
                </div>
              </div>
              <div class="col-auto">
                <button
                  class="btn btn-sm btn-phoenix-secondary bg-white hover-bg-100"
                  type="button"
                >
                  All posts
                </button>
              </div>
            </div>
          </div>
        </div>
        {{! Posts Table }}
        <div class="table-responsive mx-n1 px-1 scrollbar">
          <table class="table table-striped fs--2 mb-0 overflow-hidden">
            <caption>A list of your all-time posts</caption>
            <thead>
              <tr>
                <th
                  class="sort border-top white-space-nowrap align-middle"
                  scope="col"
                  style="min-width:360px;"
                  data-sort="title"
                >
                  TITLE
                </th>
                <th
                  class="sort border-top align-middle"
                  scope="col"
                  data-sort="comments"
                  style="min-width:110px;"
                >
                  COMMENTS
                </th>
                <th
                  class="sort border-top text-end align-middle"
                  scope="col"
                  data-sort="time"
                >
                  TIME
                </th>
                <th
                  class="sort border-top text-end pe-0 align-middle"
                  scope="col"
                >
                  ACTION
                </th>
              </tr>
            </thead>
            <tbody class="list" id="table-latest-post-body">
              {{#each posts as |post|}}
              <tr
                class="hover-actions-trigger btn-reveal-trigger position-static"
              >
              {{> post-info post}}
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{! Pagination }}
        <div class="row align-items-center py-2">
          <div class="pagination d-none"></div>
          <div class="col d-flex fs--1">
            <p
              class="mb-0 d-none d-sm-block me-3 fw-semi-bold text-900"
              data-list-info
            ></p>
            <a class="fw-semi-bold" href="#!" data-list-view="*">
              View all
              <span
                class="fas fa-angle-right ms-1"
                data-fa-transform="down-1"
              ></span>
            </a>
            <a class="fw-semi-bold d-none" href="#!" data-list-view="less">
              View Less
            </a>
          </div>
          <div class="col-auto d-flex">
            <button
              class="btn btn-link px-1 me-1"
              type="button"
              title="Previous"
              data-list-pagination="prev"
            >
              <span class="fas fa-chevron-left me-2"></span>
              Previous
            </button>
            <button
              class="btn btn-link px-1 ms-1"
              type="button"
              title="Next"
              data-list-pagination="next"
            >
              Next
              <span class="fas fa-chevron-right ms-2"></span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- Footer --}}
  <footer class="footer">
    {{> footer}}
  </footer>
</div>
<script src="/js/post.js"></script>